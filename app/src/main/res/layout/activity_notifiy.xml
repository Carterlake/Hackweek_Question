<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/notify_top_linear"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/colorful_backgound_layout">
        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/notify_exit_button"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/back"/>
        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="设置提醒"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000"/>

        <View
            android:layout_width="80dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eeeeee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <View
            android:layout_width="17dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="打 开 提 醒"
            android:textSize="18sp"
            android:textColor="#000"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ToggleButton
            android:id="@+id/notify_toggle_button"
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:background="@drawable/togglebuttonoff"
            android:textOff=""
            android:textOn=""/>
        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#eeeeee"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:id="@+id/notify_linear2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:text="时 间"
            android:gravity="end"
            android:textColor="#000"/>
        <View
            android:layout_width="40dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/notify_time_text"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="16: 39"
            android:textColor="#555"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/notify_timePeriod_text"
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:text="Pm"
            android:textSize="20sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#eee"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="重 复"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/date_button0"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/circlegray"
            android:text="天"
            android:layout_weight="3"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/date_button1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/circlegray"
            android:text="一"
            android:layout_weight="3"/>
        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/date_button2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/circlegray"
            android:text="二"/>
        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/date_button3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/circlegray"
            android:text="三"/>
        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/date_button4"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/circlegray"
            android:text="四"/>
        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/date_button5"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/circlegray"
            android:text="五" />
        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/date_button6"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/circlegray"
            android:text="六"/>
        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#eee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="提 醒 方 式"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="18sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="通知栏消息"
            android:gravity="center"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:background="@drawable/next"/>
        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ddd"/>
</LinearLayout>